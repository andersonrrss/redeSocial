{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2022",
    "lib": ["ES2022", "dom"],
    "outDir": "./app/static/js",
    "rootDir": "./app/static/ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["app/static/**/*.ts"],
  "exclude": ["node_modules"]
}