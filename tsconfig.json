{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2022",
    "lib": ["ES2022", "dom"],
    "outDir": "./api/static/js",
    "rootDir": "./api/src/",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["api/src/**/*.ts"],
  "exclude": ["node_modules"]
}